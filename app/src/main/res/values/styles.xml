<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 基础主题 -->
    <style name="Theme.Gallery" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">#00677E</item>
        <item name="android:colorPrimaryDark">#004D61</item>
        <item name="android:colorAccent">#6DDBFF</item>
    </style>

    <!-- 无ActionBar主题 -->
    <style name="Theme.Gallery.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 全屏主题 -->
    <style name="Theme.Gallery.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

</resources>